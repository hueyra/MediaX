<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#313131"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/first_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignRight="@id/first_image"
        android:layout_margin="4dp"
        android:background="@drawable/picture_orange_oval"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/first_image"
        android:gravity="center_vertical"
        android:textColor="#F1F1F1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_folder_num"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/tv_folder_name"
        android:gravity="center_vertical"
        android:textColor="#6F6F6F"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_folder_selector"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/picture_icon_sel"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="49.5dp"
        android:background="#444" />

</RelativeLayout>