<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">

    <com.github.hueyra.mediax.imgcrop.CropViewLayout
        android:id="@+id/ica_cvl_crop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cropBorderWidth="1dp"
        app:cropType="palace"
        app:horizontalPadding="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#555" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/ica_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/picture_cancel"
            android:textColor="#f1f1f1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ica_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:padding="10dp"
            android:text="@string/picture_send"
            android:textColor="#f1f1f1"
            android:textSize="14sp" />
    </FrameLayout>

</LinearLayout>